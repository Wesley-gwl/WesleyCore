{
  "ConnectionStrings": {
    "Default": "Server=.; Database=WesleyCoreDb; User ID=sa;Password=123;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Routes": [
    {
      "UpstreamPathTemplate": "/Order/Api/{url}", //请求地址
      "DownstreamPathTemplate": "/Api/{url}", //转跳地址
      "DownstreamScheme": "http",
      "ServiceName": "OrderService",
      "DownstreamHostAndPorts": [ //转跳站点
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamHttpMethod": [ "GET", "POST" ]
    }
  ],
  "QoSOptions": { //熔断
    "ExceptionsAllowedBeforeBreaking": 3, //允许多少个异常请求
    "DurationOfBreak": 20, //熔断的时间(秒)
    "TimeoutValue": 5000 //下游请求的处理时间超过多少则将请求设置为超时
  },
  "GlobalConfiguration": {
    "RequestIdKey": "OcRequestId",
    "AdministrationPath": "/administration"
  }
}